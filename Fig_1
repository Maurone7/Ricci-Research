def luminosity(power, sun_luminosity):
    return 10 ** power * sun_luminosity


def flux(power, sun_luminosity, distance):
    return luminosity(power, sun_luminosity) / (4 * np.pi * distance ** 2)


x = np.linspace(0, 100)

